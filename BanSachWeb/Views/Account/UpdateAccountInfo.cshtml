@model BanSachWeb.Models.TaiKhoan

@{
    ViewBag.Title = "Update Account Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center py-3">
    <h2>Cập Nhật Thông Tin Tài Khoản</h2>
    @using (Html.BeginForm("UpdateAccountInfo", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="TenDangNhap">Tên Đăng Nhập</label>
            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", Value = Model.TenDangNhap })
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", Value = Model.Email })
        </div>
        <div class="form-group">
            <label for="HoTen">Họ Tên</label>
            @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", Value = Model.HoTen })
        </div>
        <div class="form-group">
            <label for="SoDienThoai">Số Điện Thoại</label>
            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", Value = Model.SoDienThoai })
        </div>

        <button type="submit" class="btn btn-primary">Cập Nhật</button>
        <a class="btn btn-primary"  href="@Url.Action("ChangePass","Account")">Đổi mật khẩu</a>
        <a class="btn btn-primary"  href="@Url.Action("UpdateAddress","Account")">Đổi địa chỉ</a>
    }
</div>
